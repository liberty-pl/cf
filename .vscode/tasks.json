{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++.exe 生成活动文件",
            "command": "C:\\llvm-mingw-20251104-msvcrt-x86_64\\llvm-mingw-20251104-msvcrt-x86_64\\bin\\clang++.exe",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
        {
            "label": "Open All CPP Files",
            "type": "shell",
            "command": "Get-ChildItem *.cpp | ForEach-Object { code -r $_.FullName }",
            "problemMatcher": [],
            "group": "none",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "Open Recent CPP Files (Last 1 Hour)",
            "type": "shell",
            "command": "Get-ChildItem *.cpp | Where-Object { $_.CreationTime -gt (Get-Date).AddHours(-1) } | ForEach-Object { code -r $_.FullName }",
            "problemMatcher": [],
            "group": "none",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "Organize Contest Files",
            "type": "shell",
            "command": ".\\.vscode\\organize_contest.ps1",
            "problemMatcher": [],
            "group": "none",
            "presentation": {
                "reveal": "always",
